<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/transparent" android:startColor="@color/transparent" />

            <stroke android:width="1dip" android:color="@color/medium_gray_text" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/transparent" android:startColor="@color/transparent" />

            <stroke android:width="1dip" android:color="@color/medium_gray_text" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="180" android:endColor="@color/transparent" android:startColor="@color/transparent" />

            <stroke android:width="1dip" android:color="@color/medium_gray_text" />

            <corners android:radius="5dip" />
        </shape>
    </item>

</selector>