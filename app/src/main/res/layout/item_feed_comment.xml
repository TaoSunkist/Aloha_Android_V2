<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.wealoha.social.view.custom.CircleImageView
        android:id="@+id/item_feed_comment_userhead_cv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="12dip"
        android:layout_marginStart="12dip"
        android:layout_marginTop="8dip"
        android:clickable="true"
        android:src="@drawable/myotee2" />

    <RelativeLayout
        android:id="@+id/title_wrap_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_feed_comment_userhead_cv"
        android:layout_toEndOf="@id/item_feed_comment_userhead_cv"
        android:minHeight="70dip" >

        <TextView
            android:id="@+id/item_feed_comment_time_stamp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="7dip"
            android:layout_marginEnd="7dip"
            android:layout_marginTop="7dip"
            android:textColor="@color/light_gray_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_feed_comment_username_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:layout_marginTop="18dip"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/item_feed_comment_time_stamp_tv"
            android:layout_toStartOf="@id/item_feed_comment_time_stamp_tv"
            android:textColor="@color/black_text"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_feed_notice_comment_body_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_feed_comment_username_tv"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:layout_toLeftOf="@id/item_feed_comment_time_stamp_tv"
            android:layout_toStartOf="@id/item_feed_comment_time_stamp_tv"
            android:textColor="@color/black_text"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_below="@id/title_wrap_rl"
        android:layout_alignLeft="@id/title_wrap_rl"
        android:layout_alignStart="@id/title_wrap_rl"
        android:layout_marginTop="12dip"
        android:background="@color/line" />

</RelativeLayout>