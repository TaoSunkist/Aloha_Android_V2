<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout 
        android:id="@+id/statement_wrap_title_rl"
        style="@style/aloha_title_container" >

        <ImageView
            android:id="@+id/canceled"
            style="@style/aloha_title_back_btn" />

        <TextView
            android:id="@+id/statement_title"
            style="@style/aloha_title" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/nav_line" />

    <WebView
        android:id="@+id/statement_web"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>