<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg"
    android:orientation="vertical" >

    <RelativeLayout style="@style/aloha_title_container" >

        <ImageView
            android:id="@+id/advanced_back_tv"
            style="@style/aloha_title_back_btn"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/title"
            style="@style/aloha_title"
            android:text="@string/advanced_features" />
    </RelativeLayout>

    <View
        android:id="@+id/usercenter_line_one"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/nav_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="25dp"
        android:background="@color/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/act_bg"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_username_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="20dip" >



                <ImageView
                    android:id="@+id/icon_two"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/lock"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_two"
                    android:layout_toEndOf="@id/icon_two"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/speed_up_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speed_up"
                        android:textColor="@color/black_text"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/view_more_friends_at_once"
                        android:textColor="@color/black_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/quota_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_advanced_text"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp"
                        android:textColor="#fff"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_invite_quota_reset_rules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/label_invite_quota_reset_get"
                        android:textColor="@color/gray_text"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

            <TextView
                android:id="@+id/text_promotion_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/act_bg"
                android:gravity="start|bottom"
                android:minHeight="50dp"
                android:padding="10dip"
                android:text="@string/label_invite_promotion_code"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />
			
            <RelativeLayout
                android:id="@+id/advance_features_share_wechat_rl"
                style="@style/aloha_listitem_btn_container" >

                <ImageView
                    android:id="@+id/wechat_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:scaleType="center"
                    android:src="@drawable/wechat"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/wechat_tv"
                    style="@style/aloha_listitem_btn"
                    android:layout_toRightOf="@id/wechat_img"
                    android:layout_toEndOf="@id/wechat_img"
                    android:text="@string/wechat_friend_" />

                <ImageView style="@style/aloha_listitem_btn_right_back"
                    android:contentDescription="@string/app_name" />

                <View
                    style="@style/aloha_listitem_line"
                    android:layout_alignLeft="@id/wechat_img"
                    android:layout_alignStart="@id/wechat_img" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/advanced_feadtures_wx_friends_rl"
                style="@style/aloha_listitem_btn_container" >

                <ImageView
                    android:id="@+id/wechat_friend_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:scaleType="center"
                    android:src="@drawable/wechat_friend"
                     android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/wechatmoment_tv"
                    style="@style/aloha_listitem_btn"
                    android:layout_toRightOf="@id/wechat_friend_img"
                    android:layout_toEndOf="@id/wechat_friend_img"
                    android:text="@string/wechat_friend_circle" />

                <ImageView style="@style/aloha_listitem_btn_right_back"
                    android:contentDescription="@string/app_name" />

                <View
                    style="@style/aloha_listitem_line"
                    android:layout_alignLeft="@id/wechat_friend_img"
                    android:layout_alignStart="@id/wechat_friend_img"
                     />
            </RelativeLayout>

            <RelativeLayout
                style="@style/aloha_listitem_btn_container"
                android:layout_width="match_parent"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/whatsapp_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:scaleType="center"
                    android:src="@drawable/whatsapp"
                    android:contentDescription="@string/app_name" />

                <TextView
                    
                    style="@style/aloha_listitem_btn"
                    android:layout_toRightOf="@id/whatsapp_img"
                    android:layout_toEndOf="@id/whatsapp_img"
                    android:text="@string/message_app" />

                <ImageView style="@style/aloha_listitem_btn_right_back"
                    android:contentDescription="@string/app_name" />

                <View
                    style="@style/aloha_listitem_line"
                    android:layout_alignLeft="@id/whatsapp_img"
                    android:layout_alignStart="@id/whatsapp_img"
                     />
            </RelativeLayout>

            <RelativeLayout
                style="@style/aloha_listitem_btn_container"
                android:layout_width="match_parent"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/line_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:scaleType="center"
                    android:src="@drawable/line"
                    android:contentDescription="@string/app_name" />

                <TextView
                    style="@style/aloha_listitem_btn"
                    android:layout_toRightOf="@id/line_img"
                    android:layout_toEndOf="@id/line_img"
                    android:text="@string/line" />

                <ImageView style="@style/aloha_listitem_btn_right_back"
                     android:contentDescription="@string/app_name" />

                <View
                    style="@style/aloha_listitem_line"
                    android:layout_alignStart="@id/line_img"
                    android:layout_alignLeft="@id/line_img"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/send_sms_share_to_friends_rl"
                style="@style/aloha_listitem_btn_container"
                android:layout_width="match_parent" >

                <ImageView
                    android:id="@+id/message_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:scaleType="center"
                    android:src="@drawable/message"
                     android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/message_tv"
                    style="@style/aloha_listitem_btn"
                    android:layout_toRightOf="@id/message_img"
                    android:layout_toEndOf="@id/message_img"
                    android:text="@string/message" />

                <ImageView style="@style/aloha_listitem_btn_right_back"
                     android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>