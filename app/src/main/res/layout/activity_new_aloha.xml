<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wealoha.social.activity.NewAlohaActivity" >

    <RelativeLayout
        android:id="@+id/new_aloha_column_rl"
        style="@style/aloha_title_container" >

        <ImageView
            android:id="@+id/pic_des_back"
            style="@style/aloha_title_back_btn"
            android:onClick="closeCurrent" />

        <TextView
            android:id="@+id/aloha_title_tv"
            style="@style/aloha_title"
            android:layout_width="wrap_content" />

        <View
            android:id="@+id/usercenter_line_one"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/nav_line" />
    </RelativeLayout>

    <ListView
        android:id="@+id/new_aloha_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/new_aloha_column_rl"
        android:divider="@null"
        android:dividerHeight="0dip"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>