<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_view"
    android:background="@drawable/layout_silde_01" >
    <ImageView
        android:id="@+id/item_feed_notice_post_like_img_iv"
        android:layout_width="38dip"
        android:layout_height="38dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/app_name" />

    <RelativeLayout
        android:id="@+id/item_feed_notice_comment_feed_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginStart="15dip"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@id/item_feed_notice_post_like_img_iv"
        android:layout_toStartOf="@id/item_feed_notice_post_like_img_iv" >

        <ImageView
            android:id="@+id/item_feed_notice_post_like_parise_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/feed_like"
            android:layout_marginTop="3dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/item_feed_notice_post_like_stamp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/time_stamp_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_feed_notice_post_like_title_tv"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginStart="7dip"
            android:layout_toEndOf="@id/item_feed_notice_post_like_parise_iv"
            android:layout_toRightOf="@id/item_feed_notice_post_like_parise_iv"
            android:textColor="@color/black_text"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/wrap_user_icon_ll"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_below="@id/item_feed_notice_comment_feed_ll"
        android:layout_marginLeft="35dip"
        android:layout_marginStart="35dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>