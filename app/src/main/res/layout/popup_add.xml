<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/add_menu_bg"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="3dip"
    android:paddingTop="10dp"
    android:weightSum="2" >

    <LinearLayout
        android:id="@+id/ews_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/open_ews_iv"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:scaleType="center"
            android:src="@drawable/icon_scan" />

        <TextView
            android:id="@+id/open_ews_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ews_menu_title"
            android:textColor="@color/black_text" />
    </LinearLayout>

    <View
        android:layout_width="100dp"
        android:layout_height="1px"
        android:layout_gravity="center"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/find_you_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/open_find_you_iv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/oval_find" />

        <TextView
            android:id="@+id/open_find_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_you_menu_title"
            android:textColor="@color/black_text" />
    </LinearLayout>

</LinearLayout>