<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context="com.wealoha.social.ui.attestation.AttestationActivity" >

    <RelativeLayout style="@style/aloha_title_container" >

        <ImageView
            android:id="@+id/back_imgv"
            style="@style/aloha_title_back_btn"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/aloha_title"
            android:text="@string/check_password" />

        <TextView
            android:id="@+id/next_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingEnd="10dip"
            android:paddingLeft="0dip"
            android:paddingRight="10dip"
            android:paddingStart="0dip"
            android:text="@string/continued"
            android:textColor="@color/light_red"
            android:textSize="12sp" />
    </RelativeLayout>


    <View
        android:id="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/password_et"
        android:layout_centerInParent="true"
        android:background="@color/nav_line" />

    <EditText
        android:id="@+id/password_et"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/password_et"
        android:layout_centerInParent="true"
        android:background="@color/nav_line" />
    
    <TextView 
        android:id="@+id/user_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line_one"
        android:gravity="center"
        android:layout_marginBottom="20dip"/>
    <TextView
        android:id="@+id/password_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_phone_num"
        android:layout_marginBottom="5dip"
        android:gravity="center"
        android:text="@string/input_pw_attestation_str"
        android:textColor="@color/black_text" />
    
</RelativeLayout>