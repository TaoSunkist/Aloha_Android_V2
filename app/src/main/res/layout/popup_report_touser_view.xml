<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_report_root_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22000000"
    android:clickable="true"
    android:gravity="bottom"
    android:padding="6dip" >

    <LinearLayout
        android:id="@+id/font_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_pop_fillet"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/report_inappropriate_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_pop_fillet"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/report_inappropriate_content"
                android:textColor="#1E90FF"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/popu_alert_line_one"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/rl_back_color" />

        <RelativeLayout
            android:id="@+id/join_blacklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/add_to_black_list"
                android:textColor="#1E90FF"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/rl_back_color" />

        <RelativeLayout
            android:id="@+id/relieve_aloha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/report_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/unAloha"
                android:textColor="#1E90FF"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/popu_alert_line_two"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/rl_back_color" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/font_ll"
        android:layout_marginTop="5dip" >

        <TextView
            android:id="@+id/report_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_pop_fillet"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#1E90FF"
            android:textSize="20dip" />
    </RelativeLayout>

</RelativeLayout>