<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.wealoha.social.view.custom.CircleImageView
        android:id="@+id/comments_user_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dip"
        android:layout_marginStart="15dip"
        android:layout_marginTop="8dip"
        android:clickable="true"
        android:src="@drawable/myotee2" />

    <RelativeLayout
        android:id="@+id/title_wrap_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comments_user_photo"
        android:layout_toEndOf="@id/comments_user_photo"
        android:minHeight="70dip" >

        <TextView
            android:id="@+id/comments_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="7dip"
            android:layout_marginEnd="7dip"
            android:layout_marginTop="7dip"
            android:textColor="@color/light_gray_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comments_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:layout_marginTop="22dip"
            android:layout_toLeftOf="@id/comments_time_ago"
            android:layout_toStartOf="@id/comments_time_ago"
            android:textColor="@color/black_text"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comments_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comments_user_name"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/comments_time_ago"
            android:layout_toStartOf="@id/comments_time_ago"
            android:textColor="@color/black_text"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_below="@id/title_wrap_rl"
        android:layout_alignLeft="@id/title_wrap_rl"
        android:layout_alignStart="@id/title_wrap_rl"
        android:layout_marginTop="12dip"
        android:background="@color/line" />

</RelativeLayout>