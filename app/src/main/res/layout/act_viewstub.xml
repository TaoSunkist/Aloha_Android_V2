<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="43sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:scaleType="center"
            android:src="@drawable/logo_main" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:gravity="bottom|center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/vb_sina_login_rl"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_welcome_btn"
            android:clickable="true" >

            <TextView
                android:id="@+id/vb_sina_login"
                style="@style/login_register_btn"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/weibo_login"
                android:drawablePadding="5dp"
                android:text="@string/sina_weibo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vb_facebook_login_rl"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_welcome_btn"
            android:clickable="true" >

            <TextView
                android:id="@+id/vb_facebook_login"
                style="@style/login_register_btn"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/facebook_login"
                android:drawablePadding="5dp"
                android:text="Facebook" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vb_create_account_rl"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_welcome_btn"
            android:clickable="true" >

            <TextView
                android:id="@+id/vb_create_account"
                style="@style/login_register_btn"
                android:layout_centerInParent="true"
                android:text="@string/create_a_new_account" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vb_login_rl"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_welcome_btn"
            android:clickable="true" >

            <TextView
                android:id="@+id/vb_login"
                style="@style/login_register_btn"
                android:layout_centerInParent="true"
                android:text="@string/signin" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>