<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/usercenter_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:orientation="vertical" >

    <RelativeLayout style="@style/aloha_title_container" >

        <TextView
            style="@style/aloha_title"
            android:layout_centerInParent="true"
            android:text="@string/set_profile" />

        <TextView
            android:id="@+id/save_user_data"
            style="@style/aloha_title_red_btn"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/save" />
    </RelativeLayout>

    <View style="@style/aloha_title_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/act_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/usercenter_wrap_userinfo_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/user_data_head_icon_item"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:background="@color/act_bg"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center" >

                    <com.wealoha.social.view.custom.CircleImageView
                        android:id="@+id/usermanager_head_icon"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:src="@drawable/default_photo" />
                </RelativeLayout>

                <View
                    android:id="@+id/usercenter_line_one"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/rl_username_item"
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:background="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="end"
                    android:paddingEnd="10dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="10dip"
                    android:paddingStart="15dip" >

                    <EditText
                        android:id="@+id/user_data_nick_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="@string/create_a_unique_aloha_id"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/light_gray_text"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dip"
                    android:background="@color/act_bg" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/usercenter_height_rl"
                    style="@style/aloha_listitem_btn_container" >

                    <TextView
                        android:id="@+id/height_tv"
                        style="@style/aloha_listitem_btn_left"
                        android:text="@string/height" />

                    <ImageView
                        android:id="@+id/height_iv"
                        style="@style/aloha_listitem_btn_right_back"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/usercenter_height_tv"
                        style="@style/aloha_listitem_btn_right"
                        android:layout_toLeftOf="@id/height_iv"
                        android:layout_toStartOf="@id/height_iv" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignLeft="@id/height_tv"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@id/height_tv"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/usercenter_weight_rl"
                    style="@style/aloha_listitem_btn_container" >

                    <TextView
                        android:id="@+id/weight_tv"
                        style="@style/aloha_listitem_btn_left"
                        android:layout_centerVertical="true"
                        android:text="@string/weight" />

                    <ImageView
                        android:id="@+id/weight_iv"
                        style="@style/aloha_listitem_btn_right_back"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/usercenter_weight_tv"
                        style="@style/aloha_listitem_btn_right"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/weight_iv"
                        android:layout_toStartOf="@id/weight_iv" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignLeft="@id/weight_tv"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@id/weight_tv"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/usercenter_birthday_rl"
                    style="@style/aloha_listitem_btn_container" >

                    <TextView
                        android:id="@+id/birthday_tv"
                        style="@style/aloha_listitem_btn_left"
                        android:layout_centerVertical="true"
                        android:text="@string/birth" />

                    <ImageView
                        android:id="@+id/birthday_iv"
                        style="@style/aloha_listitem_btn_right_back"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/usercenter_birthday_tv"
                        style="@style/aloha_listitem_btn_right"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/birthday_iv"
                        android:layout_toStartOf="@id/birthday_iv" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignLeft="@id/birthday_tv"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@id/birthday_tv"
                        android:background="@color/line" />
                </RelativeLayout>

                <!--
                     <RelativeLayout
                    android:id="@+id/usercenter_area_rl"
                    style="@style/aloha_listitem_btn_container" >

                    <TextView
                        android:id="@+id/area_tv"
                        style="@style/aloha_listitem_btn_left"
                        android:layout_centerVertical="true"
                        android:text="@string/location" />

                    <ImageView
                        android:id="@+id/area_iv"
                        style="@style/aloha_listitem_btn_right_back"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/usercenter_area_tv"
                        style="@style/aloha_listitem_btn_right"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/area_iv"
                        android:layout_toStartOf="@id/area_iv"
                         />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line" />
                -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>