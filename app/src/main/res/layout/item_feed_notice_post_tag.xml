<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/root_view"
    android:background="@drawable/layout_silde_01" >

    <RelativeLayout
        android:id="@+id/wrap_post_like_img_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="7dip"
        android:layout_marginEnd="7dip"
        android:layout_marginTop="7dip" >

        <TextView
            android:id="@+id/item_feed_notice_post_tag_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dip"
            android:layout_marginEnd="4dip"
            android:textColor="@color/time_stamp_text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/item_feed_notice_post_tag_img_iv"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_toRightOf="@id/item_feed_notice_post_tag_stamp"
            android:layout_toEndOf="@id/item_feed_notice_post_tag_stamp"
            android:clickable="true"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="15dip"
        android:layout_marginStart="15dip"
        android:layout_marginTop="8dip"
        android:layout_toLeftOf="@id/wrap_post_like_img_rl"
        android:layout_toStartOf="@id/wrap_post_like_img_rl"
        android:gravity="center_vertical" >

        <com.wealoha.social.view.custom.CircleImageView
            android:id="@+id/item_feed_notice_post_tag_userhead_cv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:src="@drawable/myotee2" />

        <TextView
            android:id="@+id/item_feed_notice_post_tag_username_tv"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:layout_toEndOf="@id/item_feed_notice_post_tag_userhead_cv"
            android:layout_toRightOf="@id/item_feed_notice_post_tag_userhead_cv"
            android:textColor="@color/black_text"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>