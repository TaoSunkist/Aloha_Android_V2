<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/item_chat_user_photo_wrap_rl"
        android:layout_width="45dp"
        android:layout_height="45dp" >

        <com.wealoha.social.view.custom.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/myotee2" />

        <TextView
            android:id="@+id/item_chat_user_subscript"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:background="@drawable/tv_subscript"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:textSize="10sp"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_toRightOf="@id/item_chat_user_photo_wrap_rl"
        android:text="UserName"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_chat_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_chat_user_name"
        android:layout_margin="3dp"
        android:layout_toRightOf="@id/item_chat_user_photo_wrap_rl"
        android:singleLine="true"
        android:text="zai"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_chat_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="3ç§’"
        android:textColor="#d5d5d5"
        android:textSize="13sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:layout_alignLeft="@+id/item_chat_content_tv"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_chat_user_photo_wrap_rl"
        android:layout_marginTop="5dip"
        android:background="@color/line" />

</RelativeLayout>